@model ArticleViewModel

@{
    ViewData["Title"] = "Nuevo artículo";
}

<div id="wrapper">
    @await Html.PartialAsync("_TeacherBar")
    <input name="simptea[0].Name" value="atleastbby"/>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">@ViewData["Title"]</h2>
            </div>
        </div>
        <form asp-controller="Article" asp-action="New" enctype="multipart/form-data" method="post">
            <div class="form-horizontal">
                <div asp-validation-summary="All" class="alert alert-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Title" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Magazine" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Magazine" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="EditionDate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <div class="input-group date">
                            <input asp-for="EditionDate" class="form-control" /><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ISSN" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ISSN" class="form-control" data-msg-number="Ingresa un número entero valido" data-rule-number="true" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Autor(es)</label>
                    <div class="col-md-10">
                        <input id="teacher" class="typeahead form-control" type="text" placeholder="Docente..." />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                         <div id="teachers"></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<link href="~/Assets/css/typeahead.css" rel="stylesheet" />
<link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css" rel="stylesheet" />

@section Scripts {
    @{ await Html.RenderPartialAsync("_Administration"); }
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/Assets/js/get-teachers.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
}