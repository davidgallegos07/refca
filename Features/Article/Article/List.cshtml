@model IEnumerable<ArticleWithTeachersDto>

@{
    ViewData["Title"] = "Artículos";
}

<div id="wrapper">
    @await Html.PartialAsync("_TeacherBar")
    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">@ViewData["Title"]</h2>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @ViewData["Title"]
                    </div>
                    <div class="panel-body">
                        <a asp-controller="Article" asp-action="New" class="btn btn-primary table-button">Nuevo <i class="fa fa-plus" aria-hidden="true"></i></a>
                        <table style="width:100%" class="table table-striped table-bordered table-hover" id="tableEntity">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Revista</th>
                                    <th>Fecha de edición</th>
                                    <th>ISSN</th>
                                    <th>Autor(es)</th>
                                    <th>Archivo</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var article in Model)
                                {
                                    <tr>
                                        <td>@article.Title</td>
                                        <td>@article.Magazine</td>
                                        <td>@article.EditionDate.ToString("yyyy-MM-dd")</td>
                                        <td>@article.ISSN</td>
                                        <td>
                                            @foreach (var teacher in article.TeacherArticles)
                                            {
                                                <p>@teacher.Name</p>
                                            }
                                        </td>
                                        <td><a href="@article.ArticlePath">Descargar</a></td>
                                        <td>
                                            @if (article.IsApproved == true)
                                            {
                                                <span class="label label-success">Aprobado</span>
                                            }
                                            else
                                            {
                                                <span class="label label-warning">No aprobado</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Article" asp-action="Edit" asp-route-id="@article.Id" class="btn btn-info"
                                               data-toggle="tooltip" title="Editar"><i class="fa fa-pencil" aria-hidden="true"></i></a>

                                            <form asp-controller="Article" asp-action="Delete" method="post" asp-route-id="@article.Id" class="js-delete inline">
                                                <button type="submit" class="btn btn-danger" data-toggle="tooltip" title="Eliminar">
                                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_AdministrationList"); }
    @{ await Html.RenderPartialAsync("_DataTable"); }
}