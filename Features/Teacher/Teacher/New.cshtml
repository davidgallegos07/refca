@model TeacherViewModel

@{
    ViewData["Title"] = "Nuevo docente";
}

<div id="wrapper">
    @await Html.PartialAsync("_AdminBar")
    
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">@ViewData["Title"]</h2>
            </div>
            
        </div>
        <form asp-controller="Teacher" asp-action="New" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="alert alert-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" placeholder="ej. juan@hotmail.com"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" placeholder="Debe tener al menos 6 caracteres" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Debe coincidir" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" placeholder="ej. Alicia Alvarez"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SNI" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <div class="checkbox">
                        <label asp-for="SNI">
                            <input asp-for="SNI" />
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="HasProdep" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <div class="checkbox">
                        <label asp-for="HasProdep">
                            <input asp-for="HasProdep" />
                        </label>
                    </div>
                    <span asp-validation-for="HasProdep" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="IsResearchTeacher" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <div class="checkbox">
                        <label asp-for="IsResearchTeacher">
                            <input asp-for="IsResearchTeacher" />
                        </label>
                        <span asp-validation-for="IsResearchTeacher" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group" id="Level">
                <label asp-for="LevelId" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="LevelId" asp-items="@ViewBag.LevelId" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TeacherCode" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="TeacherCode" class="form-control" placeholder="ej. "/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="KnowledgeAreaId" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="KnowledgeAreaId" asp-items="@ViewBag.KnowledgeAreaId" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AcademicBodyId" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="AcademicBodyId" asp-items="@ViewBag.AcademicBodyId" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_AdministrationList"); }
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/Assets/js/teachers-features.js"></script>
}