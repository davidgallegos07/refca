@model TeacherCurriculumViewModel

@{
    ViewData["Title"] = "Curriculum";
}

<div id="wrapper">
    @await Html.PartialAsync("_TeacherBar")
    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">@ViewData["Title"]</h2>
                @if (TempData["StatusMessage"] != null)
                {
                    <div class="status-message">@TempData["StatusMessage"]</div>
                }
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-8">
                    <form asp-controller="Teacher" asp-action="Curriculum" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-horizontal">
                            <input asp-for="Id" type="hidden" />
                            <div class="form-group">
                                <label asp-for="CVFile" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <input class="btn btn-default" asp-for="CVFile" />
                                    <span asp-validation-for="CVFile" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-4">      
                    <div class="btn-curriculum">
                        <a href="@Model.CVPath">Descargar curriculum <i class="fa fa-download" aria-hidden="true"></i></a>
                    </div>
            </div>
        </div>  
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_Administration"); }
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}