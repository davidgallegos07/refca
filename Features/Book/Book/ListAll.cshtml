@model IEnumerable<BookWithTeachersDto>

@{
    ViewData["Title"] = "Libros aprobados";
}

<div id="wrapper">
    @await Html.PartialAsync("_AdminBar")
    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">@ViewData["Title"]</h2>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @ViewData["Title"]
                    </div>
                    <div class="panel-body">
                        <table style="width:100%" class="table table-striped table-bordered table-hover" id="tableEntity">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>ISBN</th>
                                    <th>Número de edición</th>
                                    <th>Número de páginas</th>
                                    <th>Editorial</th>
                                    <th>Género</th>
                                    <th>Año</th>
                                    <th>Autor(es)</th>
                                    <th>Archivo</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var book in Model)
                                {
                                    <tr>
                                        <td>@book.Title</td>
                                        <td>@book.ISBN</td>
                                        <td>@book.Edition</td>
                                        <td>@book.PrintLength</td>
                                        <td>@book.Editorial</td>
                                        <td>@book.Genre</td>
                                        <td>@book.Year</td>
                                        <td>
                                            @foreach (var teacher in book.TeacherBooks)
                                            {
                                                <p>@teacher.Name</p>
                                            }
                                        </td>
                                        <td><a href="@book.BookPath">Descargar</a></td>
                                        <td><span class="label label-success">Aprobado</span></td>
                                        <td>
                                            <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-info"
                                            data-toggle="tooltip" title="Editar"><i class="fa fa-pencil" aria-hidden="true"></i></a>

                                            <form asp-controller="Book" asp-action="Delete" method="post" asp-route-id="@book.Id" c class="js-delete inline">
                                                <button type="submit" class="btn btn-danger" data-toggle="tooltip" title="Eliminar">
                                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                </button>
                                            </form>

                                            <form asp-controller="Book" asp-action="IsApproved" method="post" asp-route-id="@book.Id" c class="js-approved inline">
                                                <button type="submit" class="btn btn-warning" data-toggle="tooltip" title="No aprobar">
                                                    <i class="fa fa-remove" aria-hidden="true"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_AdministrationList"); }
    @{ await Html.RenderPartialAsync("_DataTable"); }
}