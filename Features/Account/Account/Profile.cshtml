@model TeacherProfileViewModel

@{
    ViewData["Title"] = "Perfil";
}

<div id="wrapper">
    @await Html.PartialAsync("_TeacherBar")
    
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">@ViewData["Title"]</h2>
                @if (TempData["StatusMessage"] != null)
                {
                    <div class="status-message">@TempData["StatusMessage"]</div>
                }
            </div>
            
        </div>
        <form asp-controller="Account" asp-action="Profile" asp-route-returnurl="@ViewData["ReturnUrl"]" class="form-horizontal" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="alert alert-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Avatar" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Avatar" class="form-control" placeholder="https://gravatar/avatar/0a1b2c3d4e5f6a7b8c9d1e3fa4b5c6d7e8f9" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="WebSite" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="WebSite" class="form-control" placeholder="https://misitioweb.com" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FacebookProfile" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="FacebookProfile" class="form-control" placeholder="https://www.facebook.com/usuario" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TwitterProfile" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="TwitterProfile" class="form-control" placeholder="https://twitter.com/usuario" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Biography" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="Biography" class="form-control" rows="5"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </div>
            <div class="row">
                <hr />
                <div style="padding-bottom: 10px">
                    <label class="col-md-2 control-label">Curriculum</label>
                    <div class="col-md-10">
                        <a asp-controller="Teacher" asp-action="Curriculum" class="btn btn-primary">Curriculum</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_Administration"); }
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}