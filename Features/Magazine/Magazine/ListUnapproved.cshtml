@model IEnumerable<MagazineWithTeachersDto>

@{
    ViewData["Title"] = "Revistas no aprobadas";
}

<div id="wrapper">
    @await Html.PartialAsync("_AdminBar")
    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">@ViewData["Title"]</h2>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @ViewData["Title"]
                    </div>
                    <div class="panel-body">
                        <table style="width:100%" class="table table-striped table-bordered table-hover" id="tableEntity">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>ISSN</th>
                                    <th>Índice</th>
                                    <th>Número de edición</th>
                                    <th>Fecha de publicación</th>
                                    <th>Editor</th>
                                    <th>Autor(es)</th>
                                    <th>Archivo</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var magazine in Model)
                                {
                                    <tr>
                                        <td>@magazine.Title</td>
                                        <td>@magazine.ISSN</td>
                                        <td>@magazine.Index</td>
                                        <td>@magazine.Edition</td>
                                        <td>@magazine.EditionDate.ToString("yyyy-MM-dd")</td>
                                        <td>@magazine.Editor</td>
                                        <td>
                                            @foreach (var teacher in magazine.TeacherMagazines)
                                            {
                                                <p>@teacher.Name</p>
                                            }
                                        </td>
                                        <td><a href="@magazine.MagazinePath">Descargar</a></td>
                                        <td><span class="label label-warning">No aprobado</span></td>
                                        <td>
                                            <a asp-controller="Magazine" asp-action="Edit" asp-route-id="@magazine.Id" class="btn btn-info"
                                               data-toggle="tooltip" title="Editar"><i class="fa fa-pencil" aria-hidden="true"></i></a>

                                            <form asp-controller="Magazine" asp-action="Delete" method="post" asp-route-id="@magazine.Id" class="js-delete inline">
                                                <button type="submit" class="btn btn-danger" data-toggle="tooltip" title="Eliminar">
                                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                </button>
                                            </form>

                                            <form asp-controller="Magazine" asp-action="IsApproved" method="post" asp-route-id="@magazine.Id" class="js-approved inline">
                                                <button type="submit" class="btn btn-warning" data-toggle="tooltip" title="Aprobar">
                                                    <i class="fa fa-check" aria-hidden="true"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_AdministrationList"); }
    @{ await Html.RenderPartialAsync("_DataTable"); }
}