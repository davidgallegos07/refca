@model IEnumerable<AcademicBody>

@{
    ViewData["Title"] = "Cuerpos académicos";
}

<div id="wrapper">
    @await Html.PartialAsync("_AdminBar")
    
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">@ViewData["Title"]</h2>
            </div>
            
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading"></div>
                    <div class="panel-body">        
                         <div class="table-button">
                            <a asp-controller="AcademicBodies" asp-action="New" class="btn btn-primary">Nuevo 
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            </a>
                        </div>
                        
                        <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    
                                    <th>Nombre</th>
                                    <th>Código Promep</th>
                                    <th>Grado de consolidación</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var AcademicBody in Model)
                                {
                                    <tr>
                                        
                                        <td>@AcademicBody.Name</td>
                                        <td>@AcademicBody.PromepCode</td>
                                        <td>@AcademicBody.ConsolidationGrade.Name</td>
                                        <td>
                  
                                           <a asp-controller="AcademicBodies" asp-action="Edit" asp-route-id="@AcademicBody.Id" class="btn btn-sm btn-info"
                                               data-toggle="tooltip" title="Editar"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                            

                                            <form asp-controller="AcademicBodies" asp-action="Delete" method="post" asp-route-id="@AcademicBody.Id" class="js-delete inline">
                                                <button type="submit" class="btn btn-sm btn-danger" data-toggle="tooltip" title="Eliminar">
                                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_AdministrationList");}
    @{await Html.RenderPartialAsync("_DataTable");};
}
