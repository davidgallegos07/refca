@{ViewData["Title"] = "Capítulos de libro";}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" 
})) { @Html.AntiForgeryToken()}

<div id="wrapper">
    @await Html.PartialAsync("_TeacherBar")
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">@ViewData["Title"]</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading"></div>
                    <div class="panel-body">
                        <div class="table-button">
                        <a asp-controller="Chapterbook" asp-action="New" class="btn btn-primary ">Nuevo 
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            </a>
                        <div class="btn-group">
                            <div class="btn-group">
                                    <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Acciones
                                    <span class="caret"></span>
                                </a>
                                    <ul class="dropdown-menu actions"></ul>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="search-box" placeholder="Buscar Capítulo por Título, Título de libro, ISBN o Editorial">
                                    <span class="input-group-btn">
                                    <button class="btn btn-link" type="button" id="search-btn"><i class="fa fa-search" aria-hidden="true"></i></button>
                                    </span>
                                </div>
                            </div>                    
                            <div class="col-md-3">
                                <span>Capítulos aprobados</span>
                                <label>
                                    <input id="isApproved" type="checkbox" checked>
                                </label>
                            </div>
                        </div>
                        <br>
                        <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Título de libro</th>
                                    <th>Fecha de publicación</th>
                                    <th>ISBN</th>
                                    <th>Editorial</th>
                                    <th>Autor(es)</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                         </div>  
                        <ul id="pagination" class="pagination-sm"></ul>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_AdministrationList"); }
    @{ await Html.RenderPartialAsync("_DataTable"); }
    <script src="~/Assets/js/features/chapterbooks/teacher-chapterbooks-table.js"></script>
}