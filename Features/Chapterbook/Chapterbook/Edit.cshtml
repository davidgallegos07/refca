@model ChapterbookViewModel

@{
    ViewData["Title"] = "Editar capítulo de libro";
}

<div id="wrapper">
    @if (User.IsInRole(Roles.Admin))
    {
        @await Html.PartialAsync("_AdminBar")
    }
    else
    {
        @await Html.PartialAsync("_TeacherBar")
    }
    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">@ViewData["Title"]</h2>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <form asp-controller="Chapterbook" asp-action="Edit" enctype="multipart/form-data" method="post">
            <div class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Id" type="hidden" />
                <div class="form-group">
                    <label asp-for="Title" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="BookTitle" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="BookTitle" class="form-control" />
                        <span asp-validation-for="BookTitle" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PublishedDate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <div class="input-group date">
                            <input asp-for="PublishedDate" class="form-control" /><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                        <span asp-validation-for="PublishedDate" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ISBN" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ISBN" class="form-control" />
                        <span asp-validation-for="ISBN" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Editorial" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Editorial" class="form-control" />
                        <span asp-validation-for="Editorial" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ChapterbookFile" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input class="btn btn-default" type="file"
                               data-msg-extension="Solo se permiten archivos con extension .pdf" data-rule-extension="pdf"
                               id="ChapterbookFile" name="ChapterbookFile" value="">
                        <span asp-validation-for="ChapterbookFile" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Autor(es)</label>
                    <div class="col-md-10">
                        <input id="teacher" class="typeahead form-control" type="text" placeholder="Docente..." />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <div id="teachers">
                            @foreach (var teacher in Model.Teachers)
                            {
                                <div>
                                    <div class='list-group-item' id="@teacher.Id"> @teacher.Name </div>
                                    <input name='TeacherIds' hidden value="@teacher.Id" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<link href="~/Assets/css/typeahead.css" rel="stylesheet" />
<link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css" rel="stylesheet" />

@section Scripts {
    @{ await Html.RenderPartialAsync("_Administration"); }
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/Assets/js/get-teachers.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
}