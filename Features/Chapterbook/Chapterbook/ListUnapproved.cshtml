@model IEnumerable<ChapterbookWithTeachersDto>

@{
    ViewData["Title"] = "Capítulos de libro no aprobados";
}

<div id="wrapper">
    @await Html.PartialAsync("_AdminBar")
    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">@ViewData["Title"]</h2>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @ViewData["Title"]
                    </div>
                    <div class="panel-body">
                        <table style="width:100%" class="table table-striped table-bordered table-hover" id="tableEntity">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Título de libro</th>
                                    <th>ISBN</th>
                                    <th>Editorial</th>
                                    <th>Autor(es)</th>
                                    <th>Archivo</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var chapterbook in Model)
                                {

                                    <tr>
                                        <td>@chapterbook.Title</td>
                                        <td>@chapterbook.BookTitle</td>
                                        <td>@chapterbook.ISBN</td>
                                        <td>@chapterbook.Editorial</td>
                                        <td>
                                            @foreach (var teacher in chapterbook.TeacherChapterbooks)
                                            {
                                                <p>@teacher.Name</p>
                                            }
                                        </td>
                                        <td><a href="@chapterbook.ChapterbookPath">Descargar</a></td>
                                        <td><span class="label label-warning">No aprobado</span></td>
                                        <td>
                                            <a asp-controller="Chapterbook" asp-action="Edit" asp-route-id="@chapterbook.Id" class="btn btn-info"
                                               data-toggle="tooltip" title="Editar"><i class="fa fa-pencil" aria-hidden="true"></i></a>

                                            <form asp-controller="Chapterbook" asp-action="Delete" method="post" asp-route-id="@chapterbook.Id" class="js-delete inline">
                                                <button type="submit" class="btn btn-danger" data-toggle="tooltip" title="Eliminar">
                                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                </button>
                                            </form>

                                            <form asp-controller="Chapterbook" asp-action="IsApproved" method="post" asp-route-id="@chapterbook.Id" class="js-approved inline">
                                                <button type="submit" class="btn btn-warning" data-toggle="tooltip" title="Aprobar">
                                                    <i class="fa fa-check" aria-hidden="true"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_AdministrationList"); }
    @{ await Html.RenderPartialAsync("_DataTable"); }
}