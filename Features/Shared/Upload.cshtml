@model FileViewModel 

@{ 
    ViewData["Title"] = "Agregar archivo"; 
}

<div id="wrapper">
    @await Html.PartialAsync("_TeacherBar")

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">@ViewData["Title"]</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form asp-controller="" asp-action="Upload" enctype="multipart/form-data" method="post">
                <div class="form-horizontal">
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="File" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input class="btn btn-default" type="file" id="File" name="File" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-success">Guardar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
    @section Scripts { 
        @{ await Html.RenderPartialAsync("_Administration"); }
         @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
     }