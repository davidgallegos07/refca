@model ThesisViewModel

@{
    ViewData["Title"] = "Nueva tesis";
}

<div id="wrapper">
    @await Html.PartialAsync("_TeacherBar")
    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">@ViewData["Title"]</h2>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <form asp-controller="Thesis" asp-action="New" enctype="multipart/form-data" method="post">
            <div class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="StudentName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="StudentName" class="form-control" />
                        <span asp-validation-for="StudentName" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="EducationProgramId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="EducationProgramId" asp-items="@ViewBag.EducationProgramId" class="form-control"></select>
                        <span asp-validation-for="EducationProgramId" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ResearchLineId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="ResearchLineId" asp-items="@ViewBag.ResearchLineId" class="form-control"></select>
                        <span asp-validation-for="ResearchLineId" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ThesisFile" class="col-md-2 control-label"></label>

                    <div class="col-md-10">
                        <input class="btn btn-default" type="file" data-val="true" data-val-required="El archivo es requerido"
                               data-msg-extension="Solo se permiten archivos con extension .pdf" data-rule-extension="pdf"
                               id="ThesisFile" name="ThesisFile" value="">
                        <span asp-validation-for="ThesisFile" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PublishedDate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <div class="input-group date">
                            <input asp-for="PublishedDate" class="form-control" /><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                        <span asp-validation-for="PublishedDate" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Autor(es)</label>
                    <div class="col-md-10">
                        <input id="teacher" class="typeahead form-control" type="text" placeholder="Docente...">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <div id="teachers"></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<link href="~/Assets/css/typeahead.css" rel="stylesheet" />
<link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css" rel="stylesheet" />

@section Scripts {
    @{ await Html.RenderPartialAsync("_Administration"); }
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/Assets/js/get-teachers.js"></script>
    <script src="~/Assets/js/thesis-features.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
}