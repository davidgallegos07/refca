@model IEnumerable<ResearchWithTeachersDto>

@{
    ViewData["Title"] = "Investigaciones aprobadas";
}

<div id="wrapper">
    @await Html.PartialAsync("_AdminBar")
    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">@ViewData["Title"]</h2>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @ViewData["Title"]
                    </div>
                    <div class="panel-body">
                        <table style="width:100%" class="table table-striped table-bordered table-hover" id="tableEntity">
                            <thead>
                                <tr>
                                    <th>Clave</th>
                                    <th>Título</th>
                                    <th>Área de conocimiento</th>
                                    <th>Tipo de investigación</th>
                                    <th>Sector</th>
                                    <th>Duración del proyecto</th>
                                    <th>Cuerpo Académico</th>
                                    <th>Grado</th>
                                    <th>L.G.A.C</th>
                                    <th>Autor(es)</th>
                                    <th>Archivo</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var research in Model)
                                {
                                    <tr>
                                        <td>@research.Code</td>
                                        <td>@research.Title</td>
                                        <td>@research.KnowledgeArea.Name</td>
                                        <td>@research.ResearchType</td>
                                        <td>@research.Sector</td>
                                        <td>@research.ResearchDuration</td>
                                        <td>@research.AcademicBody.Name</td>
                                        <td>@research.AcademicBody.ConsolidationGrade.Name</td>
                                        <td>@research.ResearchLine.Name</td>
                                        <td>
                                            @foreach (var teacher in research.TeacherResearch)
                                            {
                                                <p>@teacher.Name</p>
                                            }
                                        </td>
                                        <td><a href="@research.ResearchPath">Descargar</a></td>
                                        <td><span class="label label-success">Aprobado</span></td>
                                        <td>
                                            <a asp-controller="Research" asp-action="Edit" asp-route-id="@research.Id" class="btn btn-info"
                                               data-toggle="tooltip" title="Editar"><i class="fa fa-pencil" aria-hidden="true"></i></a>

                                            <form asp-controller="Research" asp-action="Delete" method="post" asp-route-id="@research.Id" class="js-delete inline">
                                                <button type="submit" class="btn btn-danger" data-toggle="tooltip" title="Eliminar">
                                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                </button>
                                            </form>

                                            <form asp-controller="Research" asp-action="IsApproved" method="post" asp-route-id="@research.Id" class="js-approved inline">
                                                <button type="submit" class="btn btn-warning" data-toggle="tooltip" title="No aprobar">
                                                    <i class="fa fa-remove" aria-hidden="true"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_AdministrationList"); }
    @{ await Html.RenderPartialAsync("_DataTable"); }
}